## -*- coding: utf-8 -*-
<%inherit file="base.tmpl"/>
<%namespace name="ui" file="crumbs.tmpl" import="bar"/>

<%block name="content">
${ui.bar(crumbs)}
%if folders or files:
<ul>
% for name in folders:
    <li><a href="${name|u}"><i class="fa fa-folder-open"></i> ${name|h}</a>
% endfor
% for name in files:
    <li><a href="${name|u}.html"><i class="fa fa-file"></i> ${name|h}</a>
% endfor
</ul>
%endif
% if source_link:
    <p class="sourceline">
        <a href="${source_link}" id="sourcelink">
            <i class="fa fa-file"></i> ${messages("Source")}
        </a>
    </p>
% endif
% if code:
    ${code}
% endif
</%block>

