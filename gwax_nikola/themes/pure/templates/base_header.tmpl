## -*- coding: utf-8 -*-
<%namespace name="base" file="base_helper.tmpl" import="*"/>

<%def name="html_header()">
    <nav id="menu" class="pure-menu pure-menu-horizontal">
        ${html_site_title()}
        ${html_translation_header()}
        ${html_navigation_links()}
        %if search_form:
        <span class="searchform" role="search">
            ${search_form}
        </span>
        %endif
    </nav>
    ${template_hooks['page_header']()}
</%def>

<%def name="html_site_title()">
    <a id="brand" class="pure-menu-heading" href="${abs_link(_link("root", None, lang))}" title="${blog_title|h}" rel="home">
    %if logo_url:
        <img src="${logo_url}" alt="${blog_title|h}" id="logo">
    %endif

    % if show_blog_title:
        <span id="blog-title">${blog_title|h}</span>
    % endif
    </a>
</%def>

<%def name="html_navigation_links()">
    <ul class="pure-menu-list">
    %for url, text in navigation_links[lang]:
        % if isinstance(url, tuple):
            <li class="pure-menu-item pure-menu-has-children pure-menu-allow-hover">
                <a href="#" class="pure-menu-link">${text}</a>
            <ul class="pure-menu-children">
            %for suburl, text in url:
                % if rel_link(permalink, suburl) == "#":
                    <li class="pure-menu-item pure-menu-active"><a class="pure-menu-link" href="${permalink}">${text}</a></li>
                %else:
                    <li class="pure-menu-item"><a class="pure-menu-link" href="${suburl}">${text}</a></li>
                %endif
            %endfor
            </ul>
        % else:
            % if rel_link(permalink, url) == "#":
                <li class="pure-menu-item pure-menu-active"><a class="pure-menu-link" href="${permalink}">${text}</a></li>
            %else:
                <li class="pure-menu-item"><a class="pure-menu-link" href="${url}">${text}</a></li>
            %endif
        % endif
    %endfor
    ${template_hooks['menu']()}
    ${template_hooks['menu_alt']()}
    </ul>
</%def>

<%def name="html_translation_header()">
    %if len(translations) > 1:
        <div id="toptranslations">
            <h2>${messages("Languages:")}</h2>
            ${base.html_translations()}
        </div>
    %endif
</%def>
